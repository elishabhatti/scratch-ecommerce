<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Order</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Jersey+15&family=Poppins:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="flex items-center justify-between">
      <%- include("partials/logo") %>
      <div class="profile flex items-center">
        <div class="mx-2">
          <h1 class="text-2xl leading-2">
            Hello <%= user?.fullname || "Guest" %>!
          </h1>
          <%- include("partials/logout") %>
        </div>
        <form action="/update-profile" method="get">
          <button type="submit">
            <div
            class="bg-white border-2 border-black rounded-full flex justify-center items-center w-15 h-15"
            >
            <ion-icon
            class="text-3xl text-black"
            name="person-outline"
            ></ion-icon>
          </button>
        </div>
      </form>
      </div>
    </div>
    <div class="flex mt-3 gap-3 items-center">
      <ion-icon name="arrow-back-outline"></ion-icon>
      <a class="underline" href="/shop">Go Back</a>
    </div>
    <h1 class="text-4xl text-center">Update Order</h1>
    <div class="main-container mt-5 flex justify-center gap-5">
      <div>
        <img class="w-[500px]" src="<%= order.image %>" alt="Product Image" />
      </div>
      <div class="w-[500px]">
        <h1 class="text-3xl mb-3">Order Details</h1>
        <form
          class="ml-5"
          action="/update-product/<%= order._id %>"
          method="POST"
        >
          <label>Title:</label>
          <input
            class="bg-transparent border-none"
            type="text"
            value="<%= order.title %>"
            name="title"
          />
          <br />
          <label>Price:</label>
          <input
            class="bg-transparent border-none"
            type="text"
            value="<%= (order.price).toFixed(2) %>"
            name="price"
          />
          <br />
          <p>Shipping Fee: 3.00$</p>
          <p>Platform Fee: Free</p>
          <label>Quantity:</label>
          <input
            class="text-black mb-3 peer bg-transparent w-full border-2 border-black px-3 py-3"
            id="quantity"
            type="number"
            name="quantity"
            value="<%= order.quantity %>"
            required
            data-price="<%= order.price %>"
          />

          <br />
          <label>Payment Method:</label>
          <input
            class="text-black mb-3 bg-transparent peer w-full border-2 border-black px-3 py-3"
            type="text"
            name="paymentMethod"
            value="<%= order.paymentMethod %>"
            required
          />
          <br />
          <input
            type="text"
            value="<%= (order.price * order.quantity + 3).toFixed(2) %>"
            name="totalAmount"
            id="totalAmount"
            readonly
          />
          <button class="w-full bg-black px-3 py-2 text-white" type="submit">
            Update Order
          </button>
        </form>
      </div>
    </div>
    <script defer src="/javascripts/update-totalAmount.js"></script>
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
  </body>
</html>
