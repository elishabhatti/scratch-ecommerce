<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Details</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Jersey+15&family=Poppins:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/style.css" /> 
  </head>
  <body>
    <div class="flex items-center justify-between">
      <%- include("partials/logo") %>
      <div class="profile flex items-center">
        <div class="mx-2">
          <h1 class="text-2xl leading-2">
            Hello <%= user?.fullname || "Guest" %>!
          </h1>
    <%- include("partials/logout") %>
        </div>
        <div
          class="bg-white border-2 border-black rounded-full flex justify-center items-center w-12 h-12"
        >
          <ion-icon
            class="text-3xl text-black"
            name="person-outline"
          ></ion-icon>
        </div>
      </div>
    </div>
    <div class="flex mt-3 items-center">
      <a class="underline" href="/shop">Go Back</a>
    </div>
    <h1 class="text-4xl text-center">Product Details:</h1>
    <div class="main-container mt-5 flex justify-center gap-5">
      <div>
        <img class="w-[500px]" src="<%= product.image %>" alt="Product Image" />
      </div>
      <div class="w-[500px]">
        <h1 class="text-3xl mb-3">Price Breakdown</h1>
        <form class="ml-5" action="/buy-bag" method="post">
          <input
            class="bg-transparent border-none"
            hidden
            name="image"
            type="text"
            value="<%= product.image%>"
          />
          <input
          hidden
            name="userId"
            type="text"
            value="<%= user._id%>"
          />
          <input
          hidden
            name="productId"
            type="text"
            value="<%= product._id%>"
          />
          <label>Title:</label>
          <input
            class="bg-transparent border-none"
            type="text"
            value="<%= product.title %>"
            name="title"
          />
          <br />
          <label>Price:</label>
          <input
            class="bg-transparent border-none"
            type="text"
            value="<%= (product.price).toFixed(2) %>"
            name="price"
          />
          <br />
          <p>Shipping Fee: 3.00$</p>
          <p>Platform Fee: Free</p>
          <label>Quantity:</label>
          <input
            class="text-black mb-3 peer bg-transparent w-full border-2 border-black px-3 py-3"
            type="text"
            placeholder="Enter Bags Quantity"
            name="quantity"
            />
            <br />
            <label>Payment Method:</label>
            <input
            class="text-black mb-3 bg-transparent peer w-full border-2 border-black px-3 py-3"
            type="text"
            placeholder="Enter Your Payment Method"
            name="paymentMethod"
          />
          <br />
          <label>Total Amount:</label>
          <input
            class="text-black bg-transparent"
            type="text"
            id="totalPrice"
            readonly
            value="<%= (product.price + 3).toFixed(2) %>$"
            name="totalAmount"
            />
          <br />
          <input
            class="w-full bg-black px-3 py-2 text-white"
            type="submit"
            value="Buy Now"
          />
        </form>
      </div>
    </div>

    <script>
      const quantityInput = document.querySelector("input[name='quantity']");
      const totalPriceInput = document.querySelector(
        "input[name='totalAmount']"
      );
      const productPrice = parseFloat("<%= product.price %>") || 0;
      const shippingFee = 3.0;

      quantityInput.addEventListener("input", () => {
        let quantity = parseInt(quantityInput.value) || 1;
        if (quantity < 1) quantity = 1;
        quantityInput.value = quantity;
        totalPriceInput.value = (productPrice * quantity + shippingFee).toFixed(
          2
        );
      });
    </script>

    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
  </body>
</html>
