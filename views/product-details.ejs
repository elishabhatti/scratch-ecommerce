<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Details</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Jersey+15&family=Poppins:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./style.css" />
    <style>
      * {
        font-family: "Jersey 15";
      }
      body {
        padding: 2rem;
        font-size: 18px;
        color: white;
        background-color: black;
      }
    </style>
  </head>
  <body>
    <div class="flex items-center justify-between">
      <h1 class="text-3xl">
        <ion-icon class="text-3xl" name="bag-outline"></ion-icon>
        Scratch
      </h1>
      <div class="profile flex items-center">
        <div class="mx-2">
          <h1 class="text-2xl leading-2">
            Hello <%= user?.fullname || "Guest" %>!
          </h1>
          <form action="/logout" method="post">
            <button type="submit" class="text-2xl">Logout</button>
          </form>
        </div>
        <div
          class="bg-white rounded-full flex justify-center items-center w-12 h-12"
        >
          <ion-icon
            class="text-3xl text-black"
            name="person-outline"
          ></ion-icon>
        </div>
      </div>
    </div>
    <div class="flex mt-3 items-center">
      <a href="/shop" class="underline">Go Back</a>
    </div>
    <h1 class="text-4xl text-center mt-3">Product Details:</h1>
    <div class="main-container mt-10 flex justify-center gap-5">
      <div>
        <img class="w-[500px]" src="<%= product.image %>" alt="Product Image" />
      </div>
      <div class="w-[500px]">
        <h1 class="text-3xl">Price Breakdown</h1>
        <form action="/buy-bag" method="post">
          Image Url<input
            class="bg-transparent border-none"
            name="image"
            type="text"
            value="<%= product.image%>"
          />
          <br />
          User Id<input
            class="bg-transparent border-none"
            name="userId"
            type="text"
            value="<%= user._id%>"
          />
          <br />
          Product Id<input
            class="bg-transparent border-none"
            name="productId"
            type="text"
            value="<%= product._id%>"
          />
          <br />
          <label>Title:</label>
          <input
            class="bg-transparent border-none"
            type="text"
            value="<%= product.title %>"
            name="title"
          />
          <br />
          <label>Price:</label>
          <input
            class="bg-transparent border-none"
            type="text"
            value="<%= (product.price).toFixed(2) %>"
            name="price"
          />
          <br />
          <p>Shipping Fee: 3.00$</p>
          <p>Platform Fee: Free</p>
          <label>Quantity:</label>
          <input
            class="text-white bg-transparent w-full border-2 px-3 py-3"
            type="text"
            placeholder="Enter Bags Quantity"
            name="quantity"
          />
          <br />
          <label>Payment Method:</label>
          <input
            class="text-white bg-transparent w-full border-2 px-3 py-3"
            type="text"
            placeholder="Enter Your Payment Method"
            name="paymentMethod"
          />
          <br />
          <label>Total Amount:</label>
          <input
            class="text-white bg-transparent"
            type="text"
            id="totalPrice"
            readonly
            value="<%= (product.price + 3).toFixed(2) %>"
            name="totalAmount"
          />

          <br />
          <input
            class="w-full bg-white px-3 py-2 text-black"
            type="submit"
            value="Buy Now"
          />
        </form>
      </div>
    </div>

    <script>
      const quantityInput = document.querySelector("input[name='quantity']");
      const totalPriceInput = document.querySelector(
        "input[name='totalAmount']"
      );
      const productPrice = parseFloat("<%= product.price %>") || 0;
      const shippingFee = 3.0;

      quantityInput.addEventListener("input", () => {
        let quantity = parseInt(quantityInput.value) || 1;
        if (quantity < 1) quantity = 1;
        quantityInput.value = quantity;
        totalPriceInput.value = (productPrice * quantity + shippingFee).toFixed(
          2
        );
      });
    </script>

    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
  </body>
</html>
